<div class="container p-4 ">
    <div class="row ">
        <div class="col-md-4  ">
            <div class="card text-center events mx-auto">
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Event</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Phone</th>
                                </tr>
                            </thead>
                            </thead>
                            {{#each events}}
                            <tr>
                                <li>
                                    <td>{{event_name}}</td>
                                    <td>{{event_date}}</td>
                                    <td>{{phone}}</td>
                                </li>
                            </tr>
                            {{else}}
                            <div class="col-md-4 mx-auto">
                                <div class="card card-body text-center">
                                    <p>There are events yet.</p>
                                </div>
                            </div>
                            {{/each}}
                        </table>
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>